    <repository>
      <id>bintray-davidwhitlock-maven</id>
      <name>DavidWhitlock-maven</name>
      <url>https://api.bintray.com/maven/davidwhitlock/maven/PortlandStateJava/;publish=1;override=1</url>
    </repository>
    <site>
      <id>whitlock-PSU</id>
      <name>David Whitlock's PSU Web Site</name>
